<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalFantasyApplication" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorPrimaryContainer">@color/light_blue</item>
    </style>

    <style name="myName">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="character">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Theme.FinalFantasyApplication" parent="Base.Theme.FinalFantasyApplication" />
</resources>